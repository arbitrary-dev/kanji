<resources>

    <style name="AppThemeDay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#364499</item>
        <item name="colorAccent">#FF4081</item>

        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">#99FFFFFF</item> <!-- used for dimming -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppThemeNight" parent="AppThemeDay">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">?android:attr/colorPrimary</item>

        <item name="android:windowBackground">@android:color/black</item>
    </style>

</resources>
